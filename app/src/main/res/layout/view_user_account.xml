<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="275dp">

            <RelativeLayout
                android:id="@+id/rl_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp">

                <com.landscape.weight.CircleImageView
                    android:id="@+id/icon_avatar"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/icon_def_avatar" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/icon_avatar"
                    android:layout_alignRight="@+id/icon_avatar"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/icon_user_camera" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_avatar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:text="新福克斯的咖啡机"
                android:textColor="@color/menu_item_text"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/icon_female"
                android:drawablePadding="8dp"
                android:text="初三 一班"
                android:textColor="@color/user_class_gray"
                android:textSize="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_lv_small"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/UserAccountLvText"
                    android:text="0"
                    android:drawableTop="@drawable/icon_lv_small"/>

                <View
                    style="@style/horizontalDivider"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:id="@+id/tv_lv_normal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/UserAccountLvText"
                    android:text="0"
                    android:drawableTop="@drawable/icon_lv_normal"/>

                <View
                    style="@style/horizontalDivider"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:id="@+id/tv_lv_big"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/UserAccountLvText"
                    android:text="0"
                    android:drawableTop="@drawable/icon_lv_big"/>

            </LinearLayout>
        </RelativeLayout>

        <View
            style="@style/verticalBlock" />

        <RelativeLayout
            android:id="@+id/rl_user_modify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icon_user_modify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_user_modify"
                android:layout_margin="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/icon_user_modify"
                android:layout_centerVertical="true"
                android:text="个人信息"/>

            <View
                style="@style/verticalDivider"
                android:layout_toRightOf="@+id/icon_user_modify"
                android:layout_alignParentBottom="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_arrow"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_flower_chart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icon_flower_chart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_flower_chart"
                android:layout_margin="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/icon_flower_chart"
                android:layout_centerVertical="true"
                android:text="红花排行榜"/>

            <View
                style="@style/verticalDivider"
                android:layout_toRightOf="@+id/icon_flower_chart"
                android:layout_alignParentBottom="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_arrow"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_wonder_chart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icon_wonder_chart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_wonder_chart"
                android:layout_margin="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/icon_wonder_chart"
                android:layout_centerVertical="true"
                android:text="点赞排行榜"/>

            <View
                style="@style/verticalDivider"
                android:layout_toRightOf="@+id/icon_wonder_chart"
                android:layout_alignParentBottom="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_arrow"/>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>
